<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<style>
  .form-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-card {
    background: white;
    border-radius: 0.5rem;
    padding: 2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .form-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e3e6e8;
  }

  .form-header h2 {
    color: #2c3e50;
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0;
  }

  .form-label {
    font-weight: 500;
    color: #495057;
    margin-bottom: 0.5rem;
  }

  .required {
    color: #dc3545;
  }

  .current-image-section {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }

  .current-image {
    max-width: 100%;
    max-height: 200px;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    display: block;
  }

  .image-upload-area {
    border: 2px dashed #dee2e6;
    border-radius: 0.5rem;
    padding: 2rem;
    text-align: center;
    background: #f8f9fa;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .image-upload-area:hover {
    border-color: #667eea;
    background: #f0f0ff;
  }

  .image-upload-area.dragover {
    border-color: #667eea;
    background: #e8e8ff;
  }

  .image-preview-container {
    margin-top: 1rem;
    display: none;
  }

  .image-preview {
    max-width: 100%;
    max-height: 300px;
    border-radius: 0.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .upload-icon {
    font-size: 3rem;
    color: #6c757d;
    margin-bottom: 1rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e3e6e8;
  }

  .btn {
    padding: 0.75rem 2rem;
  }

  .form-control:focus,
  .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
  }
</style>
<body>
  <div class="form-container">
    <div class="form-card">
      <div class="form-header">
        <h2>
          <i class="bi bi-pencil-square me-2"></i>
          <%= title %>
        </h2>
      </div>

      <% if (locals.alert) { %>
        <div class="alert alert-<%= alert.type %> alert-dismissible fade show" role="alert">
          <strong><%= alert.title %></strong> <%= alert.message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% } %>

      <form action="/admin/equipmentAdmin/edit/<%= equipment._id %>" method="POST" enctype="multipart/form-data">
        
        <!-- รูปภาพปัจจุบัน -->
        <div class="mb-4">
          <label class="form-label">รูปภาพปัจจุบัน</label>
          <% if (equipment.image) { %>
            <div class="current-image-section" id="currentImageContainer">
              <img src="<%= equipment.image %>" alt="<%= equipment.name %>" class="current-image">
              <button type="button" class="btn btn-danger btn-sm" id="removeCurrentImageBtn">
                <i class="bi bi-trash me-1"></i>ลบรูปภาพนี้
              </button>
              <input type="hidden" name="removeImage" id="removeImageInput" value="false">
            </div>
          <% } else { %>
            <div class="current-image-section">
              <p class="text-muted mb-0">
                <i class="bi bi-image me-2"></i>ยังไม่มีรูปภาพ
              </p>
            </div>
          <% } %>
        </div>

        <!-- อัพโหลดรูปใหม่ -->
        <div class="mb-4">
          <label class="form-label">เปลี่ยนรูปภาพใหม่ (ถ้าต้องการ)</label>
          <div class="image-upload-area" id="imageUploadArea">
            <input type="file" id="imageInput" name="image" accept="image/*" style="display: none;">
            <div id="uploadPrompt">
              <i class="bi bi-cloud-upload upload-icon"></i>
              <p class="mb-1"><strong>คลิกเพื่ออัพโหลดรูปภาพใหม่</strong></p>
              <p class="text-muted small mb-0">หรือลากไฟล์มาวางที่นี่</p>
              <p class="text-muted small">รองรับ: JPG, PNG, GIF, WEBP (ขนาดไม่เกิน 5MB)</p>
            </div>
          </div>
          <div class="image-preview-container" id="imagePreviewContainer">
            <img id="imagePreview" class="image-preview" alt="Preview">
            <button type="button" class="btn btn-danger btn-sm mt-2" id="removeNewImageBtn">
              <i class="bi bi-trash me-1"></i>ยกเลิกรูปใหม่
            </button>
          </div>
        </div>

        <!-- ชื่ออุปกรณ์ -->
        <div class="mb-3">
          <label for="name" class="form-label">
            ชื่อุปกรณ์ <span class="required">*</span>
          </label>
          <input 
            type="text" 
            class="form-control" 
            id="name" 
            name="name" 
            required
            maxlength="100"
            value="<%= equipment.name %>"
            placeholder="ระบุชื่ออุปกรณ์"
          >
        </div>

        <!-- หมวดหมู่ -->
        <div class="mb-3">
          <label for="category_id" class="form-label">
            หมวดหมู่ <span class="required">*</span>
          </label>
          <select class="form-select" id="category_id" name="category_id" required>
            <option value="">-- เลือกหมวดหมู่ --</option>
            <% categories.forEach(category => { %>
              <option value="<%= category._id %>" 
                <%= equipment.category_id && equipment.category_id.toString() === category._id.toString() ? 'selected' : '' %>>
                <%= category.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <!-- สถานที่ -->
        <div class="mb-3">
          <label for="location" class="form-label">สถานที่</label>
          <input 
            type="text" 
            class="form-control" 
            id="location" 
            name="location"
            maxlength="100"
            value="<%= equipment.location || '' %>"
            placeholder="ระบุสถานที่เก็บอุปกรณ์"
          >
        </div>

        <!-- สถานะ -->
        <div class="mb-3">
          <label for="status" class="form-label">สถานะ</label>
          <select class="form-select" id="status" name="status">
            <option value="available" <%= equipment.status === 'available' ? 'selected' : '' %>>
              พร้อมใช้งาน
            </option>
            <option value="unavailable" <%= equipment.status === 'unavailable' ? 'selected' : '' %>>
              ไม่พร้อมใช้งาน
            </option>
          </select>
        </div>

        <!-- รายละเอียด -->
        <div class="mb-4">
          <label for="description" class="form-label">รายละเอียด</label>
          <textarea 
            class="form-control" 
            id="description" 
            name="description" 
            rows="4"
            maxlength="500"
            placeholder="ระบุรายละเอียดเพิ่มเติม"
          ><%= equipment.description || '' %></textarea>
          <small class="text-muted">รายละเอียดสูงสุด 500 ตัวอักษร</small>
        </div>

        <!-- ปุ่มบันทึกและยกเลิก -->
        <div class="form-actions">
          <a href="/admin/equipmentAdmin" class="btn btn-secondary">
            <i class="bi bi-x-circle me-2"></i>ยกเลิก
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-2"></i>บันทึกการแก้ไข
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // ===== การจัดการอัพโหลดรูปภาพ =====
    const imageUploadArea = document.getElementById('imageUploadArea');
    const imageInput = document.getElementById('imageInput');
    const uploadPrompt = document.getElementById('uploadPrompt');
    const imagePreviewContainer = document.getElementById('imagePreviewContainer');
    const imagePreview = document.getElementById('imagePreview');
    const removeNewImageBtn = document.getElementById('removeNewImageBtn');
    const currentImageContainer = document.getElementById('currentImageContainer');
    const removeCurrentImageBtn = document.getElementById('removeCurrentImageBtn');
    const removeImageInput = document.getElementById('removeImageInput');

    // ลบรูปภาพปัจจุบัน
    if (removeCurrentImageBtn) {
      removeCurrentImageBtn.addEventListener('click', function() {
        if (confirm('คุณแน่ใจหรือไม่ที่จะลบรูปภาพนี้?')) {
          currentImageContainer.style.display = 'none';
          removeImageInput.value = 'true';
        }
      });
    }

    // คลิกเพื่ออัพโหลดรูปใหม่
    imageUploadArea.addEventListener('click', function() {
      imageInput.click();
    });

    // เมื่อเลือกไฟล์
    imageInput.addEventListener('change', handleFileSelect);

    // Drag over
    imageUploadArea.addEventListener('dragover', function(e) {
      e.preventDefault();
      imageUploadArea.classList.add('dragover');
    });

    // Drag leave
    imageUploadArea.addEventListener('dragleave', function() {
      imageUploadArea.classList.remove('dragover');
    });

    // Drop
    imageUploadArea.addEventListener('drop', function(e) {
      e.preventDefault();
      imageUploadArea.classList.remove('dragover');
      
      const files = e.dataTransfer.files;
      if (files.length > 0) {
        imageInput.files = files;
        handleFileSelect();
      }
    });

    // ยกเลิกรูปใหม่
    removeNewImageBtn.addEventListener('click', function(e) {
      e.stopPropagation();
      imageInput.value = '';
      uploadPrompt.style.display = 'block';
      imagePreviewContainer.style.display = 'none';
      removeImageInput.value = 'false';
    });

    // ฟังก์ชันจัดการไฟล์ที่เลือก
    function handleFileSelect() {
      const file = imageInput.files[0];
      
      if (file) {
        // ตรวจสอบประเภทไฟล์
        const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
        if (!allowedTypes.includes(file.type)) {
          alert('รองรับเฉพาะไฟล์รูปภาพ (JPEG, PNG, GIF, WEBP)');
          imageInput.value = '';
          return;
        }

        // ตรวจสอบขนาดไฟล์ (5MB)
        if (file.size > 5 * 1024 * 1024) {
          alert('ขนาดไฟล์ต้องไม่เกิน 5MB');
          imageInput.value = '';
          return;
        }

        // แสดงตัวอย่างรูปภาพ
        const reader = new FileReader();
        reader.onload = function(e) {
          imagePreview.src = e.target.result;
          uploadPrompt.style.display = 'none';
          imagePreviewContainer.style.display = 'block';
          removeImageInput.value = 'false';
        };
        reader.readAsDataURL(file);
      }
    }

    // ป้องกันการส่งฟอร์มซ้ำ
    const form = document.querySelector('form');
    form.addEventListener('submit', function(e) {
      const submitBtn = form.querySelector('button[type="submit"]');
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>กำลังบันทึก...';
    });
  </script>
</body>
</html>